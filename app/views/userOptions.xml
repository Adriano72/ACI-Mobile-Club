<Alloy>
	
	<Window id="win" class="container" onOpen="loadData">
		<TitleControl platform="ios">
			<Label id="titleControl" class="titleControl">Scegli un'opzione</Label>
		</TitleControl>

		
		<View id="wrapper">
			<View class="rounded">
				<View class="rowContainer">
					<Label class="l1">Sei registrato?</Label>
					<Label class="l2" onClick="accedi">Accedi</Label>
				</View>
			</View>

			<View class="rounded">
				<View class="rowContainer">
					<Label class="l1">Sei socio?</Label>
					<Label class="l2" onClick="registrati">Registrati</Label>
				</View>
			</View>
			<View class="rounded">
				<View class="rowContainer">
					<Label class="l1">Non sei socio?</Label>
					<Label class="l2" onClick="associati">Associati</Label>
				</View>
			</View>
		</View>
	</Window>
</Alloy>