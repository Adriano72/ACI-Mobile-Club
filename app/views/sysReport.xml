<Alloy>
	<Window id="win" class="container">

		<ScrollView id="contentWrapper">
			


			<Label class="h1">SYSTEM REPORT</Label>
			<Label class="h4">Comunica le informazioni di sistema agli sviluppatori. Utile per segnalare malfunzionalenti.</Label>

			<View class="separator-inner"/>
			<Label class="h3" >Nome del segnalatore</Label>
			<TextField id="name"></TextField>


			<View class="separator-inner"/>
			<Label class="h3" >Messaggio (opzionale)</Label>
			<TextArea id="message"></TextArea>

			<View class="separator-inner"/>
			<Label class="h3" >Info di sistema</Label>
			<Label id="sysinfo"></Label>

	
		</ScrollView>

		<View class="separator"></View>
		<View id="buttonWrapper">
			<Button id="btCancel" onClick="cancel" >CHIUDI</Button>
			<View class="v-separator"></View>
			<Button id="btSend" onClick="send">INVIA</Button>
		</View>

	

	</Window>
</Alloy>