<Alloy>
	<Window id="win" class="container" onOpen="doopen">
		<TitleControl platform="ios">
			<View class="titleControl"></View>
		</TitleControl>
		<Menu id="menu" platform="android">

			<!-- Cannot specify node text.  Use attributes only. -->
			<!--<MenuItem id="mn_menu" title="Menu" onClick="showHideMenu"/>-->
			<!--<MenuItem id="mn_settings" title="Impostazioni"/>-->

		</Menu>
		<View id="headerView">
			<Label class="PTSansBold" id="headerText" text="Login"/>
		</View>
		<Label class="PTSansBold" id="subHeaderText" text="Accedi alle informazioni della tua tessera!"/>
		<TextField id="username" class="inputField" hintText=" Nome utente"/>
		<TextField id="password" class="inputField" hintText=" Password" passwordMask="true"/>
		<View id="ricordamiContainer">
			<Widget id="ricordami" src="checkbox" value="false"/>
			<Label class="PTSansRegular ricordamiText">Ricordami</Label>
		</View>
		<View id="signupWrapper" class="buttonContainer" onClick="doSignup">
				<Button id="signupButton">Registrati</Button>
			</View>
			<View id="loginWrapper" class="buttonContainer" onClick="doLogin">
				<Button id="loginButton">Accedi</Button>
			</View>
			

			<View id="resetWrapper" >
				<Label id="resetButton" onClick="doResetPwd">Hai dimenticato la tua Password?</Label>
			</View>
			

	</Window>
</Alloy>
