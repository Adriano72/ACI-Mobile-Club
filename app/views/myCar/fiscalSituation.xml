<Alloy>
	<Window class="container" id="win" layout="vertical" onOpen="onActivityOpen">
		<!-- View Targa -->
		<View platform="ios" id="carHeader">
			<ImageView id="veicleImg"/>
			<View id="carInfoWrapper">
				<View class="textLine">
					<Label class="desclabel">L('targa_label')</Label>
					<Label class="boldLabel" id="labelLicensePlate" left="2dp"/>
				</View>
				<View class="textLine">
					<Label class="desclabel">L('modello_label')</Label>
					<Label class="boldLabel" id="veicleLabel" left="2dp"/>
				</View>
			</View>
		</View>

		<View platform="android" backgroundColor="#efeff4" height="Titanium.UI.SIZE" layout="horizontal" left="20dp" top="20dp" width="Titanium.UI.FILL">
			<ImageView id="veicleImg"/>
			<View height="Titanium.UI.SIZE" layout="vertical" left="20dp" width="Titanium.UI.SIZE">
				<View height="Titanium.UI.SIZE" layout="horizontal" left="0" width="Titanium.UI.SIZE">
					<Label class="desclabel">L('targa_label')</Label>
					<Label class="boldLabel" id="labelLicensePlate" left="2dp"/>
				</View>
				<View height="Titanium.UI.SIZE" layout="horizontal" left="0" width="Titanium.UI.SIZE">
					<Label class="desclabel">L('modello_label')</Label>
					<Label class="boldLabel" id="veicleLabel" left="2dp"/>
				</View>
			</View>
		</View>
		<!-- Fine View Targa -->
		<ListView backgroundColor="#FFFFFF" defaultItemTemplate="fiscalTemplate" id="listFiscal" separatorColor="#d3d3d3" top="20dp">
			<Templates>
				<ItemTemplate platform="ios" name="fiscalTemplate">
					<View id="itemWrapper">
						
						<!-- prezzo e durata -->
						<View id="infoWrapper">
							
							 <!-- es: Gennaio 2013 - Dicembre 2013 -->
							<View class="textLine" >
								<Label bindId="startFiscalPeriod" class="desclabel" />
								<Label class="desclabel" left="2" right="2">-</Label>
								<Label bindId="endFiscalPeriod" class="desclabel" />
							</View>
							<!-- es: â‚¬400.76 -->
							<Label bindId="totalAmount" class="labelBoldBlue" left="0" top="5dp"/>

						</View>

						<!-- stato del pagamento  -->
						<View id="statusWrapper">
							<ImageView bindId="iconStatus" height="23dp" id="imageStatus"/>
							<Label bindId="status" id="statusLabel" top="5dp"/>
						</View>

						<!-- pulsanti di azione -->
						<View id="buttonWrapper">
							<View class="viewButton" onClick="buttonAction">
								<ImageView class="imageButton" bindId="imgActionButton"></ImageView>
								<Label bindId="nameActionButton" class="labelButton"/>
							</View>
						</View>

					</View>

				</ItemTemplate>

				<ItemTemplate platform="android" name="fiscalTemplate">
					<View bottom="25dp" height="Titanium.UI.SIZE" layout="vertical" left="20dp" right="20dp" top="20dp" width="Titanium.UI.FILL">
						<View height="Titanium.UI.SIZE" layout="horizontal" width="Titanium.UI.FILL">
							<View height="Titanium.UI.SIZE" layout="vertical" width="80%">
								<View height="Titanium.UI.SIZE" layout="horizontal" left="0" width="Titanium.UI.SIZE">
									<Label bindId="startFiscalPeriod" class="desclabel" id="labelStartFiscalPeriod"/>
									<Label class="desclabel" left="2dp" right="2dp">-</Label>
									<Label bindId="endFiscalPeriod" class="desclabel" id="labelEndFiscalPeriod"/>
								</View>
								<Label bindId="totalAmount" class="labelBoldBlue" left="0" top="5dp"/>
							</View>
							<View height="Titanium.UI.SIZE" layout="vertical" width="20%">
								<ImageView bindId="iconStatus" height="23dp" id="imageStatus"/>
								<Label bindId="status" id="statusLabel" top="5dp"/>
							</View>
						</View> 
						<View bindId="action" class="viewButton" left="0" top="10dp" onClick="buttonAction">
							 <ImageView class="imageButton" bindId="imgActionButton"></ImageView>
							<Label bindId="nameActionButton" class="labelButton"/>
						</View>
					</View>
				</ItemTemplate>
			</Templates>
			<ListSection id="fiscalSection"/>
		</ListView>
	</Window>
</Alloy>