<Alloy>
	<Window id="win" class="container" >
		
		<ScrollableView class="tesseraContainer">
			<!--<ImageView id="tessera" class="imgTessera" onPostlayout="checkSize" onClick="showSYC"/>-->
			<View class="imgTessera" onClick="showSYC">
				<ImageView id="tessera" class="card" ></ImageView>
				<View id="rotatedContainer" class="datiContainer">

					<Label id="LabelTitolare" class="labelTessera">TITOLARE</Label>
					<Label id="titolare" class="datiTessera"/>
					<Label class="spacer"/>
					<View class = "bottomContainer">

						<View class="leftBlock">
							<Label id="LabelNumTessera" class="labelTessera bottomItems">N° TESSERA</Label>
							<Label id="numTessera" class="datiTessera bottomItems"/>
						</View>
						<View class="rightBlock">
							<Label id="LabelValidita" class="labelTessera bottomItems">VALIDITÀ</Label>
							<Label id="validita" class="datiTessera bottomItems"/>
						</View>

					</View>
				</View>
			</View>

			<View  class="imgTessera" onClick="showSYC">
				<ImageView  id="tessera_back"  class="card" zIndex="10" ></ImageView>
				<ImageView  id="barcode" defaultImage="/none.png" zIndex="100" ></ImageView>
			</View>

			<View  class="imgTessera" >
		<Require id="list" src="Tessere_List" ></Require>
		
			</View>

		</ScrollableView>
	</Window>
</Alloy>
