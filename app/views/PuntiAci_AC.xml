<Alloy>
	<Collection src="automobileClub"/>
	<Window id="win" class="container">
		<TitleControl platform="ios">
			<View class="titleControl"></View>
		</TitleControl>
		<RightNavButton platform="ios">
			<ImageView class="rightNavImg"/>
		</RightNavButton>
		<Menu id="menu" platform="android">

			<!-- Cannot specify node text.  Use attributes only. -->
			<!--<MenuItem id="mn_menu" title="Menu" onClick="showHideMenu"/>-->
			<MenuItem id="mn_settings" title="Impostazioni"/>

		</Menu>
		
		<TableView id="puntiAci_AACC_Table" class="table" dataCollection="automobileClub" dataTransform="dataTransform">
			<SearchBar id="searchBar"/>
			<TableViewRow id="riga" class="row" title="{name}">
				<View class="rowContainer">
					
					<Label class="simpleRowText PTSansBold" id="nome" text="{name}"/>
					<Label class="simpleRowText PTSansRegular indirizzo" text="{indirizzo}"/>
					<Label class="simpleRowText PTSansRegular indirizzo" text="{indirizzo2}"/>
					<View class="bottomRowContainer">
						<Label class="indicazioniStradali PTSansRegular" id="indirizzo1"/>
					</View>
					
				</View>
			</TableViewRow>
		</TableView>
	</Window>
</Alloy>