	width: Ti.UI.FILL,
	layout: "vertical",

}

".fieldWrapper" : {
	backgroundColor: Alloy.Globals.palette.bianco_sporco,
	width: Ti.UI.FILL,
	height: 40,
	top: 5
}

".field":{
	
	backgroundColor: "transparent",
	width: "90%",
	//left: "5%",
	height: 30,
	font:{fontSize: Alloy.Globals.fontSize.XXL},
	returnKeyType: Ti.UI.RETURNKEY_NEXT
}

".buttonWrapper":{
	width: "45%",
	height: 40
}

".secondaryButtonWrapper":{
	left: "2%"
}

".primaryButtonWrapper":{
	right: "2%",
	borderWidth: 1,
	borderColor: Alloy.Globals.palette.bianco_sporco,
	borderRadius: 20
}

".fieldPrefix":{
	color: Alloy.Globals.palette.blu,
	backgroundColor: Alloy.Globals.palette.grigio_chiaro,
	height: Ti.UI.FILL,
