
"Label":{
	color: Alloy.Globals.palette.bianco_sporco
}




".container":{
	backgroundImage: "/sfondoLogin.jpg",
}


"#main":{
	layout: "vertical",
	width: "90%"
}

"#formWizard":{
	height: "80%"
}
