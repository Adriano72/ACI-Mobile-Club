// container for iOS
".container[platform=ios]": {
	backgroundColor:"#fff",
	//top:"20",	
	barColor: "#f2f2f2",	
	statusBarStyle:Titanium.UI.iPhone.StatusBar.LIGHT_CONTENT,
	orientationModes: [Ti.UI.PORTRAIT]
}

// container for Android
".container[platform=android]": {
	backgroundColor:"#fff",
	orientationModes: [Ti.UI.PORTRAIT],
	exitOnClose: true
}

"#navWin": {
	backgroundColor:"#fff",
	swipeBack: false,
	top: 20
}

".titleControl[platform=ios]": {
	backgroundImage: "logoAci2.png",
	width: 120,
	height: 28
}

".rightNavImg[platform=ios]": {
	image: "ico_rotella_celeste.png",
	height: 15
}

"MenuItem": {
    showAsAction: Ti.Android.SHOW_AS_ACTION_ALWAYS
}

"#menu": {
    icon: "/images/logo_aci.png"
}

"#mn_settings": {
	icon: "/images/icona_strumenti.png"
}

".toolbar":{
	top:0,
	borderTop:"true",
	borderBottom:"true"
}

".toolbarIconLeft": {
	//width: 40,
	height: 10
}

".toolbarIconRight": {
	//width: 40,
	height: 18
}

"#headerLogo": {
	height: 23,
}

"#winTitle": {
	left:0,
	textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
	font: {
        fontSize: 19
   },
   color: '#295F95'
}

"#scrollableView[platform=ios]": {
	width: "98%",
	height: "40%",
	overlayEnabled: true,
	top: 0,
	pagingControlAlpha: 0.6
}

"#scrollableView[platform=android]": {
	width: "98%",
	height: "50%",
	top: 3,
	showPagingContro: false
}

"#view1": {
	backgroundImage: "/images/banner1.png"
	//backgroundColor:"#256"
}

"#view2": {
	//backgroundImage: "images/banner1.png"
