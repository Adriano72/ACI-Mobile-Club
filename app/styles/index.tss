"#view3": {
	//backgroundImage: "images/banner1.png"
}

"#menuView": {
	width: "100%",
	height: "100%",
	//top: 305,
	backgroundColor:"#FFF"
	
}

".buttonsContainer": {
	height: Ti.UI.SIZE,
	top: 0,
	width: "98%",
	layout: "vertical"
}

".rowWrapper": {
	height: Ti.UI.SIZE,
	width: Ti.UI.FILL,
	top: 2
}

".menuButton": {
	height: Alloy.Globals.menuButtonsHeight,
	width: Alloy.Globals.menuButtonsWidth,
	layout: 'vertical'
}

".first": {
	left: 0
}

".last": {
	right: 0
}

